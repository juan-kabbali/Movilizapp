<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorGrisClaroGoogle"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@color/rojoBS"
            android:textColor="@color/colorGrisClaroGoogle"
            android:text="@string/registro_del_vehiculo"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_marginBottom="15dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:onClick="seleccionarImagen"
            android:layout_weight="0.4"
            android:src="@drawable/icono_subir_foto_vehiculo"
            android:id="@+id/fotoBotton"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/foto_por_defecto" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:orientation="vertical" >

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/in_put_placa"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorNegroGoogle"
            android:textColorHint="@color/colorHintTextoInput"
            android:hint="@string/ingrese_la_placa_mxd_148"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:gravity="center_vertical" />
        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/in_put_marca"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorNegroGoogle"
            android:textColorHint="@color/colorHintTextoInput"
            android:hint="@string/ingrese_la_marca_mazda"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:gravity="center_vertical" />
        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/in_put_ref"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorNegroGoogle"
            android:textColorHint="@color/colorHintTextoInput"
            android:layout_marginBottom="5dp"
            android:hint="@string/ingrese_la_referencia_allegro"
            android:textAlignment="center"
            android:gravity="center_vertical" />
        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/in_put_color"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorNegroGoogle"
            android:textColorHint="@color/colorHintTextoInput"
            android:layout_marginBottom="5dp"
            android:hint="@string/ingrese_el_color_rojo"
            android:textAlignment="center"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.15"
        android:orientation="horizontal" >
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/verdeBS"
            android:textColor="@color/blancoBS"
            android:text="Finalizar"
            android:onClick="finalizar"
            android:textSize="25dip"/>

    </LinearLayout>


</LinearLayout>